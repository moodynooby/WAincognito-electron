{
  "name": "whatsapp-electron",
  "desktopName": "com.github.dagmoller.whatsapp-electron",
  "version": "1.2.5",
  "description": "DagMoller's WhatsApp Electron Multi-Account App",
  "author": "Diego Aguirre (DagMoller)",
  "license": "ISC",
  "keywords": [
    "whatsapp",
    "electron",
    "multi-account"
  ],
  "main": "./src/index.js",
  "scripts": {
    "start": "electron ./src --no-sandbox --disable-gpu-sandbox",
    "clean": "rm -rf ./dist",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:linux": "electron-builder --linux --x64",
    "dist:windows": "electron-builder --windows --x64",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "format": "biome format --write ./src",
    "check": "biome check ./src",
    "download:extension": "node scripts/download-extension.js"
  },
  "build": {
    "linux": {
      "appId": "WhatsApp Electron",
      "icon": "./assets/whatsapp-icon-512x512.png",
      "category": "Network",
      "target": [
        "AppImage",
        "tar.xz"
      ],
      "asarUnpack": [
        "**/assets/*.svg",
        "**/assets/*.png",
        "**/src/extensions/**/*"
      ]
    },
    "win": {
      "appId": "WhatsApp Electron",
      "icon": "./assets/whatsapp-icon-512x512.png",
      "target": [
        "portable",
        "zip"
      ],
      "asarUnpack": [
        "**/assets/*.svg",
        "**/assets/*.png",
        "**/src/extensions/**/*"
      ]
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "electron": "^39.6.1",
    "electron-builder": "^26.8.1"
  }
}
